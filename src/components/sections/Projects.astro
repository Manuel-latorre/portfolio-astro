---
import Github from "@/icons/Github.astro";
import Section from "../Section.astro";
import {projects} from 'cv-es.json'
---

<Section title="Proyectos">
    <ul>
        {
            projects.map(({url, description, name, isActive, technologies, repository}) => {
                return(
                    <li>
                        <article>
                            <header>
                                <div>
                                    <a href={url} title={`Ver el proyecto ${name}`} target="_blank">
                                        <h3>{name}</h3>
                                    </a> 

                                    <a class="github" href={repository} title={`Ver el repositorio en Github ${name}`} target="_blank">
                                        <Github/>
                                    </a>    
                                </div>
                                <p>{description}</p>
                            </header>
                            <footer>
                                <div>
                                    <p>Tecnolog√≠as</p>
                                </div>
                                <div class="technologies">
                                    {
                                        technologies.map((technology) => {
                                            return(
                                                <span>
                                                    {technology}    
                                                </span>
                                            )
                                        })
                                    }
                                </div>
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul{
        display: grid;
        grid-template-columns: repeat(
            auto-fit,
            minmax(200px, 1fr)
        );
        gap: 1rem;
    }

    header div{
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .github{
        margin-bottom: 5px;
    }



    article{
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding:16px;
        height:100%;
    }

    article header{
        flex:1
    }

    article h3{
        margin-bottom: 10px;
    }

    article a{
        color: black;
    }

    article a:hover{
        text-decoration: underline;
    }

    article p{
        font-size: 0.75rem;
        line-height: 1.2rem;
    }
    footer{
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    .technologies{
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span{
        border-radius: 6px;
        background: #9999;
        color: #444;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }

    footer p{
        color: #111;
        font-weight: 600;
        font-size: 0.85rem;
        margin-bottom: 8px;
    }
</style>